    %title= @title
    %meta{name: "description",  content: ""}
    %meta{name: "viewport",  content: "width=device-width, initial-scale=1"}
    %link{rel: "stylesheet",  href: "//fonts.googleapis.com/css?family=Lato:700,400"}
